@model FitnessHubStays.Models.RoomDto

@{
    ViewBag.Title = "Room Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2>Detail For The Room No. @Model.RoomNumber</h2>
        </div>
        <div class="col-auto">
            <a href="/Room/List" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back To Rooms</a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Room Information</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Type of Room:</strong> @Model.RoomType</li>
                <li class="list-group-item"><strong>Price:</strong> $@Model.RoomPrice (per night)</li>
                <li class="list-group-item"><strong>Status:</strong> @Model.RoomStatus</li>
            </ul>
        </div>
    </div>
</div>
